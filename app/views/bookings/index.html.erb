<div class="booking-index">

<div class="grid-container">
  <div class="grid-column"> <%#=A start %>
    <h1 class="card-name-pink">My booked offers</h1> <%#=A.1 start  and end, class=text-section%>
    <ul class="cards-section"> <%#=A.2 start%>
      <% if @my_offers_booked_by_others.any? %>
          <% @my_offers_booked_by_others.each do |offer| %>
            <div class="booking-modelcard">
              <li>
                <h3 class="card-name"><%= offer.name %></h3>
                <div>
                  <% if offer.photo.attached? %>
                  <%= cl_image_tag offer.photo.key, class: "card-image", height: 110,  crop: :fill %>
                  <% else %>
                  <%= image_tag "train.jpg", alt: "train", width: 200 %>
                  <% end %>
                </div>
                <div class="card-text">
                Booked by:
                <ul class="booking-text">
                  <% offer.bookings.each do |booking| %>
                    <li>
                      <%= booking.user.email %>
                      From: <%= booking.check_in.strftime("%B %d, %Y") %>
                      Until: <%= booking.check_out.strftime("%B %d, %Y") %>
                    </li>
                  <% end %>
                </ul>
                </div>
              </li>
            </div>
          <% end %>
      <% else %>
        <p>No one is interested in your bad experience yet</p>
      <% end %>
    </ul> <%#=A.2 end%>
  </div> <%#=A end %>

  <div class="grid-column">
    <h1 class="card-name-pink">Offers I booked</h1>
    <ul class="cards-section">
      <% if @my_booked_offers.any? %>
          <% @my_booked_offers.each do |offer| %>
          <div class="card-model">
            <li><h3 class="card-name"><%= offer.name %></h3>
            <div>
              <% if offer.photo.attached? %>
              <%= cl_image_tag offer.photo.key, class: "card-image", height: 110,  crop: :fill %>
              <% else %>
              <%= image_tag "train.jpg", alt: "train", width: 200 %>
              <% end %>
            </div>
            </li>
          </div>
          <% end %>
      <% else %>
      <p>You are not interested in any bad experience yet.</p>
    <% end %>
    </ul>
  </div>

</div>

  </div>
